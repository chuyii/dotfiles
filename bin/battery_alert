#!/usr/bin/perl

$percentage = `upower -i \`upower -e | grep battery\` | grep percentage`;
$charge = `upower -i \`upower -e | grep battery\` | grep state | grep -c discharging`;

$percentage =~ /(\d+%)/;
$percentage = $1;
$percentage =~ s/%//;

if ($charge == 0) {
  print "<fc=#FFFF00>+++ charging +++</fc>\n";
  exit;
}
if ($percentage <= 10) {
  print "<fc=#FF0000>!!!battery alert!!!</fc>\n";
}
