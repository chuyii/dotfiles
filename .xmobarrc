Config { font            = "xft:SourceHanCodeJP:size=8:bold:antialias=true"
       , borderColor     = "black"
       , border          = TopB
       , bgColor         = "black"
       , fgColor         = "white"
       , position        = Top
       , lowerOnStart    = False
       , commands = [ Run Cpu ["-L","30","-H","80","-p","3","--normal","green",
                               "--low","blue","--high","red","-t","<total>%"] 10
                    , Run Date "%H:%M" "date" 10
                    , Run BatteryP ["BAT0"]
                                   ["-t", "<acstatus><left>%",
                                    "-L", "10", "-H", "80", "-p", "3",
                                    "--", "-O", "<fc=green>+</fc>", "-i", "",
                                    "-o", ""] 10
                    , Run Com "/bin/bash" ["-c", "amixer sget Master | 
                                            awk -F'[]%[]' '/%/ {
                                              if ($5 == \"off\") { print \"-M-\" }
                                              else { printf(\"%3d\\n\",$2) }
                                            }' | head -n 1"] "volume" 1
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = " %StdinReader% }\
                    \ %date% { %battery% %cpu% %volume%"
       }
